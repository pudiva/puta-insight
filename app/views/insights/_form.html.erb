<%= form_with(model: insight) do |form| %>
  <% if insight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(insight.errors.count, "error") %> prohibited this insight from being saved:</h2>

      <ul>
        <% insight.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :q1 do %>
      Pergunta número 1
    <% end %>
    <%= form.text_area :q1, rows: 10, cols: 80 %>
  </div>

  <div class="field">
    <%= form.label :q2 do %>
      Pergunta número 2
    <% end %>
    <%= form.text_area :q2, rows: 10, cols: 80 %>
  </div>

  <div class="actions">
    <%= form.submit value: "Submit Insight!" %>
  </div>
<% end %>
